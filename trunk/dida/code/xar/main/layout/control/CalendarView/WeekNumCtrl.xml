<xlue>
	 <objtemplate id="weeknum.item" class="TextObject">
        <attr>
			<top>0</top>
			<width>68</width> 
			<height>father.height</height>
			<valign>center</valign>
			<halign>center</halign>
			<font>font.text15</font>
			<textcolor>262624</textcolor>
        </attr>
    </objtemplate>
	
	<control class="WeekNumCtrl">
		<attr_def>
			
		</attr_def>
		<method_def>
			
		</method_def>
		<event_def>
			
		</event_def>
		<objtemplate>
			<children>
				<obj id="Sunday" class="TextObject" templateid="weeknum.item">
					<attr>
						<left>0</left>
						<text>日</text>
						<textcolor>orange.weekend</textcolor>
					</attr>
				</obj>
				
				<obj id="Monday" class="TextObject" templateid="weeknum.item">
					<attr>
						<left>68</left>
						<text>一</text>
					</attr>
				</obj>
				
				<obj id="Tuesday" class="TextObject" templateid="weeknum.item">
					<attr>
						<left>68*2</left>
						<text>二</text>
					</attr>
				</obj>
				
				<obj id="Wendesday" class="TextObject" templateid="weeknum.item">
					<attr>
						<left>68*3</left>
						<text>三</text>
					</attr>
				</obj>
				
				<obj id="Thusday" class="TextObject" templateid="weeknum.item">
					<attr>
						<left>68*4</left>
						<text>四</text>
					</attr>
				</obj>
				
				<obj id="Friday" class="TextObject" templateid="weeknum.item">
					<attr>
						<left>68*5</left>
						<text>五</text>
					</attr>
				</obj>
				
				<obj id="Satuday" class="TextObject" templateid="weeknum.item">
					<attr>
						<left>68*6</left>
						<text>六</text>
						<textcolor>orange.weekend</textcolor>
					</attr>
				</obj>
				
			</children>
		</objtemplate>
	</control>
</xlue>