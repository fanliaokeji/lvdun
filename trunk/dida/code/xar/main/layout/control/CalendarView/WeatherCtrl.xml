								<textcolor>system.white</textcolor>
							</attr>		
						</obj>
						
						<obj id="WeatherCtrl.Average" class="TextObject">
							<attr>
								<left>111</left>
								<top>53</top>
								<width>60</width> 
								<height>30</height>
