								<halign>left</halign>
								<font>font.text23</font>
								<textcolor>system.white</textcolor>
							</attr>		
						</obj>
						
						<obj id="WeatherCtrl.Detail" class="TextObject">
							<attr>
								<left>24</left>
								<top>82</top>
								<width>father.width-24</width> 
								<height>14</height>
								<valign>center</valign>
								<halign>left</halign>
								<font>font.text14</font>
								<textcolor>system.white</textcolor>
							</attr>		
						</obj>
						<obj id="WeatherCtrl.Tem" class="TextObject">
							<attr>
								<left>24</left>
								<top>82 + 14 + 5</top>
								<width>father.width-24</width> 
								<height>14</height>
								<valign>center</valign>
								<halign>left</halign>
								<font>font.text14</font>
								<textcolor>system.white</textcolor>
							</attr>		
						</obj>
					</children>
				</obj>
				
				<obj id="WeatherCtrl.Image.Fail" class="ImageObject">
					<attr>
						<left>5</left>
						<top>20</top>
						<width>136</width> 
						<height>46</height>
						<image>DiDa.Weather.LoadFail</image>
						<visible>false</visible>
					</attr>		
				</obj>
				
				
			</children>
			<eventlist>
				<event name="OnInitControl" file="WeatherCtrl.xml.lua" func="OnInitWeatherCtrl" />
			</eventlist>
