<xlue>
	<control class="WeatherCtrl">
		<attr_def>
			
		</attr_def>
		<method_def>
			
		</method_def>
		<event_def>
			
		</event_def>
		<objtemplate>
			<children>
				<obj id="WeatherCtrl.Image" class="ImageObject">
					<attr>
						<left>0</left>
						<top>father.height-51+5</top>
						<width>51</width> 
						<height>51</height>
						<image>Weather.DuoYun</image>
					</attr>		
				</obj>	
				
				<obj id="WeatherCtrl.Average" class="TextObject">
					<attr>
						<left>51+10</left>
						<top>0</top>
						<width>50</width> 
						<height>father.height</height>
						<valign>bottom</valign>
						<halign>center</halign>
						<font>font.fzlt21</font>
