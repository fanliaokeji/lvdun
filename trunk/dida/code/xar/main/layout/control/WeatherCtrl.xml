						<width>30</width> 
						<height>12</height>
						<valign>center</valign>
						<halign>right</halign>
						<font>font.fzlt13</font>
						<textcolor>59ACFF</textcolor>
						<text>深圳</text>
					</attr>		
				</obj>
				
				<obj id="WeatherCtrl.Detail" class="TextObject">
					<attr>
						<left>father.width-95-8</left>
						<top>30+5</top>
						<width>95</width> 
						<height>12</height>
						<valign>center</valign>
						<halign>left</halign>
						<font>font.fzlt13</font>
						<textcolor>59ACFF</textcolor>
						<text>多云19～25℃</text>
					</attr>		
				</obj>
				
			</children>
			<eventlist>
				<event name="OnInitControl" file="WeatherCtrl.xml.lua" func="OnInitWeatherCtrl" />
			</eventlist>
		</objtemplate>
