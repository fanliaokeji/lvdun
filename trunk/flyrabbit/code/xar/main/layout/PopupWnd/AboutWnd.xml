								</obj>
								
								<obj id="About.MainImage" class="ImageObject">
									<attr>
										<left>15</left>
										<top>25+5</top>
										<width>103</width>
										<height>103</height>
										<image>MainLogo</image>
									</attr>
								</obj>	
								
								<obj id="About.MainInfo" class="TextObject">
									<attr>
										<left>144</left>
										<top>62</top>
										<width>father.width</width>
										<height>26</height>
										<text>版本号：V1.0正式版本</text>
										<textcolor>28313A</textcolor>
										<font>About.Font16</font>
									</attr>
								</obj>
								<obj id="About.MainInfo2" class="TextObject">
									<attr>
										<left>191</left>
										<top>98</top>
										<width>father.width</width>
										<height>26</height>
										<text>飞兔下载 版权所有</text>
										<textcolor>7C8D9F</textcolor>
										<font>DeleteTask.Font14</font>
									</attr>
								</obj>
							</children>
						</obj>
					</children>
				</obj> <!--end of TipUpdate.MainPanel-->
			</children>
		</objtemplate>
	</control>

	<objtreetemplate id="AboutTree" class="ObjectTreeTemplate">
		<attr>
			<left>0</left>
			<top>0</top>
			<width>350</width>
			<height>141</height>
		</attr>

		<obj id="root.layout" class="AboutCtrl">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>350</width>
				<height>141</height>
			</attr>				
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="TipAboutWnd" class="FrameHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>350</width>
            <height>141</height>

            <topmost>0</topmost>
            <visible>0</visible>
            <enable>1</enable>
            <maxbox>0</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>0</sysmenu>
			<appwindow>1</appwindow>
            <fps>30</fps>
			<blur>1</blur>
        </attr>
		 <eventlist>
            <event name="OnCreate" file="AboutWnd.xml.lua" func="OnCreate"/>
            <event name="OnShowWindow" file="AboutWnd.xml.lua" func="OnShowWindow"/>
        </eventlist>
    </hostwndtemplate>

</xlue>
